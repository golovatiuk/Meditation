<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:background="@drawable/noon_still">

    <ViewFlipper
        android:id="@+id/mainViewFlipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#30ff0000"
            android:weightSum="1">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/aboutViewCloseImageButton"
                android:layout_margin="10dp"
                android:onClick="onClick"
                android:background="@drawable/main_drawer_button_background"
                android:src="@drawable/x"
                />

            <ImageView
                android:layout_width="229dp"
                android:layout_height="100dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />

            <ViewFlipper
                android:id="@+id/aboutViewFlipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.00">

            </ViewFlipper>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/aboutBottomBarIndicator1"
                    android:src="@drawable/indicator"
                    android:layout_margin="1dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/aboutBottomBarIndicator2"
                    android:src="@drawable/indicator"
                    android:layout_margin="1dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/aboutBottomBarIndicator3"
                    android:layout_margin="1dp"
                    android:src="@drawable/indicator"/>
            </LinearLayout>

        </LinearLayout>


    </ViewFlipper>

</RelativeLayout>