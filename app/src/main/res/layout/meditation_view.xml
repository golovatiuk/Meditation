<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/meditationRelativeLayout">

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="76dp"
            android:onClick="onClick"
            android:id="@+id/meditationBackButton"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/meditationBackButtonSunImage"
                android:src="@drawable/general_sun_noon"
                android:minHeight="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:clickable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backButtonLabel"
                android:id="@+id/textView17"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/mainSettingsButton"
            android:background="@drawable/general_sett_bar_handler"
            android:layout_marginBottom="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/meditationPlayButton"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:focusableInTouchMode="false"
            android:background="@drawable/meditation_play"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listeningTextView"
            android:text="Listening"
            android:textSize="28dp"
            android:textColor="#ff000000"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/meditationReplayButton"
            android:layout_above="@+id/progressBar"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:id="@+id/meditationShareButton"
            android:focusableInTouchMode="false"
            android:layout_above="@+id/meditationPlayButton"
            android:layout_toRightOf="@+id/listeningTextView"
            android:layout_toEndOf="@+id/listeningTextView"
            android:layout_marginLeft="10dp"/>

        <ProgressBar
            android:indeterminate="false"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/progressBar"
            android:progressDrawable="@drawable/meditation_circular_progress_bar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/meditationSettingsLL">
    </LinearLayout>

</RelativeLayout>
